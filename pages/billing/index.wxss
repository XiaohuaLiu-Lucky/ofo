.content {
	width: 100%;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	font-size: 34rpx;
	color: #333;
	font-weight: 500;
}
.number,
.endRide {
	width: 100%;
	flex: 2;
	text-align: center;
	padding: 80rpx 0;
}
.time {
	flex: 5;
	width: 100%;
	text-align: center;
}
.time .time-content {
	font-size: 100rpx;
	font-weight: bold;
	margin-top: 10rpx;
}
.endRide button {
	margin-top: 40rpx;
	font-size: 36rpx;
	width: 90%;
}